{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/landlord_tenant_tool.schema.json",
  "title": "Landlord Tenant Communication Tool UI Configuration",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "app",
    "introPage",
    "termsOfServicePage",
    "formPages",
    "common",
    "submittedPage",
    "inference"
  ],
  "properties": {
    "app": {
      "type": "object",
      "additionalProperties": false,
      "required": ["title"],
      "properties": {
        "title": {
          "type": "string"
        }
      }
    },
    "introPage": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "heading",
        "description",
        "features",
        "infoBox",
        "getStartedButton",
        "footerText"
      ],
      "properties": {
        "heading": { "type": "string"},
        "description": { "type": "string" },
        "features": {
          "type": "array",
          "minItems": 1,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["title", "description"],
              "properties": {
                "title": { "type": "string" },
                "description": { "type": "string" }
              }
            }
        },
        "infoBox": {
          "type": "object",
          "additionalProperties": false,
          "required": ["title", "description"],
          "properties": {
            "title": { "type": "string" },
            "description": { "type": "string" }
          }
        },
        "getStartedButton": { "type": "string" },
        "footerText": { "type": "string" }
      }
    },
    "termsOfServicePage": {
      "type": "object",
      "additionalProperties": false,
      "required": ["heading", "terms", "continueButton"],
      "properties": {
        "heading": { "type": "string" },
        "terms": { "type": "string" },
        "continueButton": { "type": "string" }
      }
    },
    "formPages": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/formPage"
      }
    },
    "common": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "pageLabel",
        "backButton",
        "tipPrefix",
        "successTipPrefix",
        "requiredIndicator"
      ],
      "properties": {
        "pageLabel": {
          "type": "string",
          "pattern": "Page \\{stepNumber\\}"
        },
        "backButton": { "type": "string" },
        "tipPrefix": { "type": "string" },
        "successTipPrefix": { "type": "string" },
        "requiredIndicator": { "type": "string" }
      }
    },
    "submittedPage": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "heading",
        "mailButton",
        "downloadButton",
        "backButton",
        "editHeader",
        "downloadFilename",
        "startAgainButton",
        "certifiedMailConfirmation",
        "startAgainConfirmation"
      ],
      "properties": {
        "heading": { "type": "string" },
        "mailButton": { "type": "string" },
        "downloadButton": { "type": "string" },
        "backButton": { "type": "string" },
        "editHeader": { "type": "string" },
        "downloadFilename": {
          "type": "string",
          "pattern": "^[^\\s]+\\.pdf$",
          "examples": ["Letter.pdf"]
        },
        "startAgainButton": { "type": "string" },
        "certifiedMailConfirmation": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "title",
            "body",
            "confirmButton",
            "cancelButton"
          ],
          "properties": {
            "title": { "type": "string" },
            "body": { "type": "string" },
            "confirmButton": { "type": "string" },
            "cancelButton": { "type": "string" }
          }
        },
        "startAgainConfirmation": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "title",
            "body",
            "confirmButton",
            "cancelButton"
          ],
          "properties": {
            "title": { "type": "string" },
            "body": { "type": "string" },
            "confirmButton": { "type": "string" },
            "cancelButton": { "type": "string" }
          }
        }
      }
    },
    "inference": {
      "type": "object",
      "additionalProperties": false,
      "required": ["systemPrompt", "userPrompt"],
      "properties": {
        "systemPrompt": {
          "type": "string",
          "description": "Template with {{.CurrentTime}} and other variables."
        },
        "userPrompt": {
          "type": "string",
          "description": "Template referencing form answer variables."
        }
      }
    }
  },
  "$defs": {
    "formPage": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "pageNumber",
        "title",
        "subtitle",
        "tipText",
        "tipType",
        "submitButtonText",
        "pageInfoText",
        "questions"
      ],
      "properties": {
        "pageNumber": { "type": "integer", "minimum": 1 },
        "title": { "type": "string" },
        "subtitle": { "type": "string" },
        "tipText": { "type": "string" },
        "tipType": {
          "type": "string",
          "enum": ["default", "success"]
        },
        "submitButtonText": { "type": "string" },
        "pageInfoText": { "type": "string" },
        "questions": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/question"
          }
        }
      }
    },
    "question": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "label", "placeholder", "required"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-zA-Z][a-zA-Z0-9_]*$"
        },
        "label": { "type": "string" },
        "placeholder": { "type": "string" },
        "required": { "type": "boolean" }
      }
    }
  }
}